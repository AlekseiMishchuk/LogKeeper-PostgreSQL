@page "/get-log"
@model LogKeeperPg.Pages.KeeperGet

<h1>@Model.LogInfo.Title</h1>
<p>Author: @Model.LogInfo.Author</p>
<p>Project: @Model.LogInfo.Project</p>

<div class="content">
    <p>@Model.LogInfo.Contents</p>
</div>

<style>
    .content {
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 4px;
        text-align: center;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(window).on('resize', function() {
        var windowWidth = $(window).width();
        var containerWidth = Math.min(600, windowWidth - 40);

        $('.container').css('width', containerWidth + 'px');
    }).trigger('resize');
</script>